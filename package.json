{
  "name": "voicevibe",
  "version": "1.0.0",
  "type": "module",
  "description": "Desktop Voice-to-Prompt Tool",
  "author": "VoiceVibe Team",
  "license": "MIT",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac-x64": "npm run build && electron-builder --mac --x64",
    "build:mac-arm64": "npm run build && electron-builder --mac --arm64",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "start": "electron .",
    "icons": "node scripts/convert-icon.mjs && electron-icon-builder --input=assets/icon.png --output=assets",
    "test": "vitest"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "form-data": "^4.0.5",
    "global-agent": "^3.0.0",
    "https-proxy-agent": "^7.0.6",
    "lucide-react": "^0.263.1",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "undici": "^7.16.0",
    "wav-decoder": "^1.3.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/ws": "^8.18.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "jsdom": "^26.1.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "electron-icon-builder": "^2.0.1",
    "postcss": "^8.4.27",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.voicevibe.app",
    "productName": "VoiceVibe",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/mac/icon.icns",
      "target": [
        "dmg"
      ],
      "identity": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
